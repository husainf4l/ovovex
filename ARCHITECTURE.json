  "django_apps": {
    "core_apps": [
      {
        "name": "core",
        "description": "Core functionality, base models, utilities",
        "models": ["Company", "UserProfile", "Settings", "Currency"]
      },
      {
        "name": "accounts",
        "description": "Authentication, users, roles, permissions",
        "models": ["User", "Role", "Permission", "Team", "InvitedUser"]
      },
      {
        "name": "accounting",
        "description": "Chart of accounts, journal entries, ledger",
        "models": ["Account", "JournalEntry", "JournalLine", "AccountType", "FiscalYear"]
      },
      {
        "name": "invoicing",
        "description": "Invoices, quotes, credit notes, payment links",
        "models": ["Invoice", "InvoiceLine", "Quote", "CreditNote", "PaymentLink", "RecurringInvoice"]
      },
      {
        "name": "receivables",
        "description": "AR management, customer payments, collections",
        "models": ["Customer", "CustomerPayment", "CollectionNotice", "AgingReport"]
      },
      {
        "name": "payables",
        "description": "AP management, vendor bills, payments",
        "models": ["Vendor", "Bill", "BillLine", "VendorPayment", "PaymentRun"]
      },
      {
        "name": "banking",
        "description": "Bank accounts, reconciliation, treasury",
        "models": ["BankAccount", "BankTransaction", "BankReconciliation", "BankFeed"]
      },
      {
        "name": "financials",
        "description": "Financial statements, budgets, forecasts",
        "models": ["Budget", "BudgetLine", "Forecast", "FinancialStatement", "CashFlowForecast"]
      },
